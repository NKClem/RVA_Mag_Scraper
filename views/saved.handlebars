<div class="col-lg-12 jumbotron">
    <h1 class="text-center">
        Mongo News Scraper
    </h1>
    <h3 class="text-center">
        Your Saved Articles
    </h3>
</div>
<div class="col-lg-12">
    {{#if article}}
        {{#each article}}
            <div class="card">
                <div class="card-header">
                    <h5>
                        {{this.title}}
                        <button type="button" class="btn btn-success" id="see-notes" data-toggle="modal" data-target="#notes-modal{{this._id}}" data-id={{this._id}}>Article Notes</button>
                        <button type="button" class="btn btn-danger" id="delete-article" data-id={{this._id}}>Remove From Saved Articles</button>
                    </h5>
                </div>
                <div class="card-body">
                    <p>
                        {{this.summary}}
                    </p>
                    <a href={{this.link}} target="_blank">Read More</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="card">
            <div class="card-body">
                <h5>
                    You have no saved articles at this time.
                </h5>
            </div>
        </div>
    {{/if}}
</div>